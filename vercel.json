{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    { "source": "/home", "destination": "/" },
    { "source": "/main", "destination": "/" },
    { "source": "/index", "destination": "/" }
  ],
  "redirects": [
    {
      "source": "/metrics",
      "destination": "/stats",
      "permanent": true
    },
    {
      "source": "/stats",
      "destination": "/stats",
      "permanent": true
    },
    {
      "source": "/pages/stats",
      "destination": "/stats",
      "permanent": true
    },
    {
      "source": "/pages/home",
      "destination": "/home",
      "permanent": true
    },

    {
      "source": "/metrics",
      "destination": "/stats",
      "permanent": true
    },

    { "source": "/monaco", "destination": "/photos/Monaco", "permanent": true },
    { "source": "/pages/monaco", "destination": "/photos/Monaco", "permanent": true },
    { "source": "/photos/monaco", "destination": "/photos/Monaco", "permanent": true },
    { "source": "/Monaco", "destination": "/photos/Monaco", "permanent": true },
    { "source": "/pages/Monaco", "destination": "/photos/Monaco", "permanent": true },
    { "source": "/photos/Monaco", "destination": "/photos/Monaco", "permanent": true },

    { "source": "/minnesota", "destination": "/photos/Minnesota", "permanent": true },
    { "source": "/pages/minnesota", "destination": "/photos/Minnesota", "permanent": true },
    { "source": "/photos/minnesota", "destination": "/photos/Minnesota", "permanent": true },
    { "source": "/Minnesota", "destination": "/photos/Minnesota", "permanent": true },
    { "source": "/pages/Minnesota", "destination": "/photos/Minnesota", "permanent": true },
    { "source": "/photos/Minnesota", "destination": "/photos/Minnesota", "permanent": true },

    { "source": "/italy", "destination": "/photos/Italy", "permanent": true },
    { "source": "/pages/italy", "destination": "/photos/Italy", "permanent": true },
    { "source": "/photos/italy", "destination": "/photos/Italy", "permanent": true },
    { "source": "/Italy", "destination": "/photos/Italy", "permanent": true },
    { "source": "/pages/Italy", "destination": "/photos/Italy", "permanent": true },
    { "source": "/photos/Italy", "destination": "/photos/Italy", "permanent": true },

    { "source": "/montenegro", "destination": "/photos/Montenegro", "permanent": true },
    { "source": "/pages/montenegro", "destination": "/photos/Montenegro", "permanent": true },
    { "source": "/photos/montenegro", "destination": "/photos/Montenegro", "permanent": true },
    { "source": "/Montenegro", "destination": "/photos/Montenegro", "permanent": true },
    { "source": "/pages/Montenegro", "destination": "/photos/Montenegro", "permanent": true },
    { "source": "/photos/Montenegro", "destination": "/photos/Montenegro", "permanent": true },

    { "source": "/wallpapers", "destination": "/photos/Wallpapers", "permanent": true },
    { "source": "/pages/wallpapers", "destination": "/photos/Wallpapers", "permanent": true },
    { "source": "/photos/wallpapers", "destination": "/photos/Wallpapers", "permanent": true },
    { "source": "/Wallpapers", "destination": "/photos/Wallpapers", "permanent": true },
    { "source": "/pages/Wallpapers", "destination": "/photos/Wallpapers", "permanent": true },
    { "source": "/photos/Wallpapers", "destination": "/photos/Wallpapers", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=()" }
      ]
    }
  ]
}
